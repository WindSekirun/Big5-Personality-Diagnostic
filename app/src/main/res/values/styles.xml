<resources>

    <style name="DrawerLightBase" parent="MaterialDrawerTheme.Light">
        <item name="material_drawer_background">#f9f9f9</item>
        <item name="material_drawer_primary_text">#727272</item>
        <item name="material_drawer_primary_icon">#727272</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">#dbdbdb</item>
        <item name="material_drawer_selected">#e8e8e8</item>
        <item name="material_drawer_selected_text">#000000</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
    </style>

    <style name="DrawerLight" parent="@style/DrawerLightBase">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="@style/DrawerLight">
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#0097A7</item>
        <item name="colorAccent">#00BCD4</item>
    </style>

</resources>
